<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeEditTextStyle">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/dp_8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/black_rounded_corners_background</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>