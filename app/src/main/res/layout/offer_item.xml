<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132dp"
    android:layout_height="132dp"
    android:orientation="vertical"
    android:background="@drawable/black_rounded_corners_background">
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/darker_green_circle_shape"
        android:contentDescription="@null"
        android:src="@drawable/ic_green_list"
        android:padding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_8"/>

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="@dimen/font_14"
        android:text="@string/vacancies_near"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"/>

    <TextView
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="@dimen/font_14"
        android:text="@string/move_up"
        android:textColor="@color/green"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_11"
        />
</LinearLayout>